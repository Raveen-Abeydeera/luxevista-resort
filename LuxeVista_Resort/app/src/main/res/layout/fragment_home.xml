<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/home_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back, Amelia"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:hint="Search for rooms, services..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="12dp" />

        <TextView
            style="@style/ProfileSectionHeader"
            android:text="Quick Access" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/quick_access_book_room"
                style="@style/ProfileCardView"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_home"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Book a Room"
                    android:textColor="@color/text_primary" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/quick_access_reserve_services"
                style="@style/ProfileCardView"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_services"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Reserve Services"
                    android:textColor="@color/text_primary" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            style="@style/ProfileSectionHeader"
            android:text="Upcoming Bookings" />

        <androidx.cardview.widget.CardView
            android:id="@+id/upcoming_booking_card"
            style="@style/ProfileCardView"
            android:visibility="gone"
            tools:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/upcoming_booking_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/onboarding1"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:id="@+id/upcoming_booking_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aromatherapy Massage"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/upcoming_booking_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spa Treatment - Tomorrow, 2:00 PM"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/ProfileSectionHeader"
            android:text="Exclusive Offers" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/offer_card_1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/luxe_vista_escape_package"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LuxeVista Escape Package"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:paddingBottom="12dp"
                            android:text="• 3 nights in Horizon Deluxe Room\n• Daily breakfast for two\n• One spa treatment per person\n• Sunset dolphin cruise\n• Price: $950 (save $200)"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/offer_card_2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_marginEnd="16dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/honeymoon_paradise_package" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Honeymoon Paradise Package"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 5 nights in Oceanfront Grand Suite\n• Champagne and chocolate arrival\n• Private beach dinner for two\n• Couples massage\n• Price: $2,800 (save $450)"
                            android:textColor="@color/text_secondary"
                            android:paddingStart="12dp"
                            android:paddingBottom="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/offer_card_3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/family_adventure_package" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Family Adventure Package"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 4 nights in Luxe Garden Villa\n• Breakfast for two adults &amp; two children\n• Kids' club access\n• Family snorkeling tour\n• Price: $2,100 (save $300)"
                            android:textColor="@color/text_secondary"
                            android:paddingStart="12dp"
                            android:paddingBottom="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
